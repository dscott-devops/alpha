<div id="page-content">
   <div class="container">
      <div class="text-center">
         <h1><%=  @article.title %></h1>

         <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
               <div class="shadow mb-5 bg-white rounded">
                  <div class="card">
                    <h5 class="card-header font-italic"> <%= link_to gravatar_for(@article.user), user_path(@article.user) %><%= link_to "#{@article.user.first_name} #{@article.user.last_name}", @article.user %></h5>
                    <% if @article.categories.any? %>
                    <div class="mt-2">
                    <%= render @article.categories %>
                    </div>
                    <% end %>
                     <div class="card-body">
                        <h1 class="card-title"><%=  @article.title %></h1>
                        <p class="card-text"><%= @article.description %></p>
                        <p class="card-text"><%= @article.tags %></p>
                        <p class="card-text"><%= @article.notes %></p>
                         <% if logged_in? && ( @article.user == current_user  || current_user.admin? )%>
                          <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %>
                            <%= link_to "Delete", article_path(@article), method: :delete,data: {confirm: "Are you sure"}, class: "btn btn-outline-danger" %>
                            <br>
                               <% end %>
                            <p class="card-footer font-italic mt-2"><small>Created at: <%= time_ago_in_words(@article.created_at) %> Edited at <%= time_ago_in_words(@article.updated_at) %></small></p>
                        <!--
                        <a href="#" class="btn btn-outline-success">View</a>
                        <a href="#" class="btn btn-outline-info">Edit</a>
                        <a href="#" class="btn btn-outline-danger">Delete</a>
                        -->
                     </div>
                  </div>
               </div>
            </div>
         </div>

      </div>
   </div>
</div>
