<h1>Articles Listing</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Tags</th>
      <th>Category</th>
      <th>Actions</th>
      </tr>

    <tbody>
      <% @articles.each do |article|%>

      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= article.tags %></td>
        <td><%= article.category %></td>
        <td><%= link_to 'Edit', article_path(article), method: :edit %> <%= link_to 'Show', article_path(article) %> <%= link_to 'Delete', article_path(article), method: :delete %></td>
      </tr>

      <% end %>
</table>
