<%= render 'shared/errors', obj: @article %>

<%= form_with(model: @article, class: "shadow mb-5 p-3 rounded bg-secondary", local: true) do |f| %>
  <div class="form-group row mb-2">

<%= f.label :title,class: "col-sm-2 col-form-label text-white" %>
<div class="col-sm-10">
<%= f.text_field :title, class: "form-control shadow rounded"  %>
</div>
</div>
<div class="form-group row mb-2">
<%= f.label :description,class: "col-sm-2 col-form-label text-white" %>
<div class="col-sm-10">
<%= f.text_area :description, rows: 5, class: "form-control shadow rounded" %>
</div>
</div>

<div class="form-group row mb-2">
<%= f.label :category,class: "col-sm-2 col-form-label text-white" %>
<div class="col-sm-10">
<%= f.collection_select :category_ids, Category.all, :id, :name,
{ prompt: "Make your selection from list"} , { multiple: true, class: "form-control shadow rounded" }  %>
</div>
</div>


<div class="form-group row mb-2">
<%= f.label :tags,class: "col-sm-2 col-form-label text-white" %>
<div class="col-sm-10">
<%= f.text_field :tags, class: "form-control shadow rounded" %>
</div>
</div>
<div class="form-group row mb-2">
<%= f.label :notes, class: "col-sm-2 col-form-label text-white" %>
<div class="col-sm-10">
<%= f.text_field :notes, class: "form-control shadow rounded" %>
</div>
</div>


<%= f.submit class: "btn btn-outline-light btn-lg"%><br>



<% end %>
