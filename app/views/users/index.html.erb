<div id="page-content">
   <div class="container">
      <div class="text-center">
        <h1>Users</h1>
        <% @users.each do |user|%>
        <div class="row justify-content-md-center">
           <div class="col-8 mt-4">
              <div class="shadow mb-5 bg-white rounded">
                   <div class="card">
                    <h5 class="card-header font-italic"><%= link_to "#{user.first_name} #{user.last_name}", user %></h5>
                    <div class="card-body">
                         <%= gravatar_for user, size: 200 %>
                       <h5 class="card-title"><%= link_to user.username,user_path(user), class: "text-success" %></h5>
                       <p class="card-text"><%= "#{user.first_name} #{user.last_name}" %></p>
                        <p class="card-text"><%= "Articles: #{user.articles.count}" %></p>
                         <p class="card-text"><%= user.role %></p>
                            <p class="card-text"><%= user.location %></p>
                            <%= link_to "View Profile", user_path(user), class: "btn btn-outline-success" %>
                         <%= link_to "Edit Profile", edit_user_path(user), class: "btn btn-outline-info" %>
                           <br>
                           <p class="card-footer font-italic mt-2"><small>User Created at: <%= time_ago_in_words(user.created_at) %> Edited at <%= time_ago_in_words(user.updated_at) %></small></p>
                       <!--
                       <a href="#" class="btn btn-outline-success">View</a>
                       <a href="#" class="btn btn-outline-info">Edit</a>
                       <a href="#" class="btn btn-outline-danger">Delete</a>
                       -->
                    </div>
                 </div>
              </div>
           </div>
        </div>
        <% end %>




</div>
</div>
</div>
