
<%= render 'shared/errors', obj: @category %>

<%= form_with(model: @category, class: "shadow mb-5 p-3 rounded bg-secondary", local: true) do |f| %>
  <div class="form-group row mb-2">

<%= f.label :name,class: "col-sm-2 col-form-label text-white" %>
<div class="col-sm-10">
<%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter new category"  %>
</div>
</div>

<%= f.submit class: "btn btn-outline-light btn-lg" %><br>



<% end %>
