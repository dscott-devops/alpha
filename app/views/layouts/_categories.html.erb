

<% @categories.each do |category|%>
<div class="row justify-content-md-center">
   <div class="col-8 mt-4">
      <div class="shadow mb-5 bg-white rounded">
         <div class="card">
            <h5 class="card-header font-italic"><%= link_to "#{category.name}", category_path(category) %></h5>
            <div class="card-body">
               <h5 class="card-title"><%= link_to "#{category.name}", category_path(category) %></h5>
               <%= link_to "View", category_path(category), class: "btn btn-outline-success" %>
               <% if logged_in? && (current_user.admin?)  %>
                 <%= link_to "Edit", edit_category_path(category), class: "btn btn-outline-info" %>
                   <%= link_to "Delete", category_path(category), method: :delete,data: {confirm: "Are you sure"}, class: "btn btn-outline-danger" %>
                   <% end %>
                   <br>
                   <p class="card-footer font-italic mt-2"><small>Created at: <%= time_ago_in_words(category.created_at) %> Edited at <%= time_ago_in_words(category.updated_at) %></small></p>
               <!--
               <a href="#" class="btn btn-outline-success">View</a>
               <a href="#" class="btn btn-outline-info">Edit</a>
               <a href="#" class="btn btn-outline-danger">Delete</a>
               -->
            </div>
         </div>
      </div>
   </div>
</div>
<% end %>
